<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/js/*</pattern>
        <pattern>/rating/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/gwt/*</pattern>
        <pattern>/META-INF/*</pattern>
        <pattern>/rating</pattern>
        <pattern>/index.html</pattern>
        <pattern>/webjars/*</pattern>
        <pattern>*/404.jsp</pattern>
    </excludes>

    <decorator name="servletOutputDecorator" page="JSPDecorator.jsp">
        <pattern>/*</pattern>
        <pattern>/</pattern>
        <pattern>/prelogin</pattern>
        <pattern>/simple</pattern>
        <pattern>/error.jsp</pattern>
    </decorator>

    <decorator name="jspOutputDecorator" page="JSPDecorator.jsp">
        <pattern>/*.jsp</pattern>
      </decorator>
</decorators>